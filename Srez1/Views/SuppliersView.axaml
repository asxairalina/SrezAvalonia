<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Srez1.Views.SuppliersView">
    
    <StackPanel Background="White" Margin="20">
        <TextBlock Text="Suppliers Management" FontSize="18" FontWeight="Bold" 
                  Foreground="#546F94" Margin="0,0,0,20"/>
        
        <ListBox x:Name="SuppliersListBox" Background="#ABCFCE" BorderThickness="0" Height="400">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" Margin="2" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Inn, StringFormat='INN: {0}'}"/>
                            <TextBlock Text="{Binding Rating, StringFormat='Rating: {0}/10'}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>