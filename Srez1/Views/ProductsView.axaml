<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Srez1.Views.ProductsView">
    
    <StackPanel Spacing="10" Margin="10">
        <!-- Header -->
        <TextBlock Text="Products Management" FontSize="20" FontWeight="Bold"/>
        
        <!-- Search and Actions -->
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox x:Name="SearchBox" 
                    Width="300" 
                    Watermark="Search products..."/>
            <Button Content="Add Product" 
                    Click="AddProductClick"/>
            <Button Content="Recalculate Costs" 
                    Click="RecalculateCostsClick"
                    Background="LightBlue"/>
        </StackPanel>

        <!-- Products List -->
        <ListBox x:Name="ProductsListBox" Height="400">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Margin="2" Padding="10" Background="White">
                        <Grid ColumnDefinitions="150*,200*,100*,100*,100*,100*" RowDefinitions="Auto,Auto,Auto,Auto">
                            <!-- Первая строка: Тип и Наименование -->
                            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                                <TextBlock Text="Тип | " FontWeight="Bold" Foreground="#546F94"/>
                                <TextBlock Text="{Binding Type.Name}" FontWeight="Bold" Foreground="#546F94"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Name}" Grid.Column="1" Grid.Row="0" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding CalculatedCost, StringFormat='{}{0:C}'}" 
                                      Grid.Column="2" Grid.Row="0" 
                                      FontWeight="Bold" Foreground="#2E8B57"
                                      HorizontalAlignment="Right"/>

                            <!-- Вторая строка: ID -->
                            <TextBlock Text="ID" Grid.Column="0" Grid.Row="1" FontWeight="SemiBold" Foreground="Gray"/>
                            <TextBlock Text="{Binding Id}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>

                            <!-- Третья строка: Минимальная стоимость для партнера -->
                            <TextBlock Text="Минимальная стоимость для партнера (р)" Grid.Column="0" Grid.Row="2" FontWeight="SemiBold" Foreground="Gray"/>
                            <TextBlock Text="{Binding MinPartnerPrice, StringFormat='{}{0:C}'}" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>

                            <!-- Четвертая строка: Ширина -->
                            <TextBlock Text="Ширина (м)" Grid.Column="0" Grid.Row="3" FontWeight="SemiBold" Foreground="Gray"/>
                            <TextBlock Text="{Binding RollWidth, StringFormat='{}{0:F2} м'}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2"/>

                            <!-- Кнопки действий -->
                            <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="5" Grid.Row="0" Grid.RowSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Content="Edit" 
                                        Tag="{Binding Id}"
                                        Click="EditProductClick"
                                        Background="LightYellow"
                                        Padding="10,5"/>
                                <Button Content="Delete" 
                                        Tag="{Binding Id}"
                                        Click="DeleteProductClick"
                                        Background="LightCoral"
                                        Padding="10,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>