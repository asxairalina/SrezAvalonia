<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Srez1.Views.MaterialsView">
    
    <StackPanel Background="White" Margin="20">
        <TextBlock Text="Materials Management" FontSize="18" FontWeight="Bold" 
                  Foreground="#546F94" Margin="0,0,0,20"/>
        
        <ListBox x:Name="MaterialsListBox" Background="#ABCFCE" BorderThickness="0" Height="400">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" Margin="2" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Price, StringFormat='Price: {0:F2} rub'}"/>
                            <TextBlock Text="{Binding StockQuantity, StringFormat='In stock: {0}'}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>